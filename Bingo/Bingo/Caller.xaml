<Window x:Class="Bingo.Caller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Title="Caller" Height="450" Width="800">
    <Grid>
        <WrapPanel Background="#c4dafa"/>
        <Button x:Name="BtnGenerar" 
                Content="Generar" 
                HorizontalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="5,5,5,5"
                Width="240"
                Height="100"
                FontSize="40"
                VerticalAlignment="Center" Margin="0,0,0,-275" Click="BtnGenerar_Click"/>
        <TextBox x:Name="TxtRnd"
                 BorderBrush="Black"
                 BorderThickness="5, 5, 5, 5"
                 HorizontalAlignment="Center" 
                 TextWrapping="Wrap" 
                 Text=""
                 IsReadOnly="True"
                 TextAlignment="Center"
                 FontSize="80"
                 VerticalAlignment="Center" 
                 Width="140"
                 Height="120" 
                 Margin="0,0,0,60"
                 />

    </Grid>
</Window>
