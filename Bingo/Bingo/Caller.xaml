<Window x:Class="Bingo.Caller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Caller" Height="1080" Width="1920" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Canvas>
        <Rectangle x:Name="Font1" Height="1313" Width="2384" RenderTransformOrigin="0.5,0.5" Fill="#08b5d1" Canvas.Left="-2563" Canvas.Top="-664" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.8">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="29.36"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Triggers>
                <EventTrigger RoutedEvent="Rectangle.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)"
                                        From="-2563" To="-475"
                                        Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)"
                                        From="-664" To="500"
                                        Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>
        <Rectangle x:Name="Font2" Height="1313" Width="2384" RenderTransformOrigin="0.5,0.5" Fill="#09269b" Canvas.Left="2089" Canvas.Top="436" HorizontalAlignment="Center" VerticalAlignment="Top" Opacity="0.8">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="29.36"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Triggers>
                <EventTrigger RoutedEvent="Rectangle.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)"
                            From="2089" To="167"
                            Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)"
                            From="436" To="-645"
                            Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>
        <Button x:Name="BtnGenerar"
                Content="Generar" 
                HorizontalAlignment="Left"
                BorderBrush="Black"
                BorderThickness="5,5,5,5"
                Width="628"
                Height="432"
                FontSize="40" FontFamily="Arista Pro Alternate Fat"
                VerticalAlignment="Top" Click="BtnGenerar_Click" MouseEnter="BtnGenerar_Encima" Canvas.Left="673" Canvas.Top="504"/>
        <TextBox x:Name="TxtRnd"
                 BorderBrush="Black"
                 BorderThickness="5, 5, 5, 5"
                 HorizontalAlignment="Left" 
                 TextWrapping="Wrap" 
                 Text=""
                 IsReadOnly="True"
                 TextAlignment="Center"
                 FontSize="80"
                 VerticalAlignment="Top" 
                 Width="506"
                 Height="120" 
                 Margin="734,127,0,0"
                 />
        <Image x:Name="burbuja1" HorizontalAlignment="Left" 
               Height="162" Width="156" 
               Margin="1549,-245,0,0" VerticalAlignment="Top" Source="/bubble_1.png" Stretch="Fill" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                                From="1549,-245,0,0" To="1549,450,0,0"
                                                Duration="0:0:0.1"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <Image x:Name="bubble18" Grid.Column="1" HorizontalAlignment="Left" Height="166" Margin="394,-180,0,0" VerticalAlignment="Top" Width="150" Source="/bubble_18.png" Stretch="Fill">
            <Image.RenderTransform>
                <RotateTransform x:Name="rotateTransform" Angle="0"/>
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                             From="394,-180,0,0" To="394,1000,0,0"
                                             Duration="0:0:0.1"/>
                            <!--<DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.7"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                             From="0" To="180"
                                             Duration="0:0:3"/>-->
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <Image x:Name="burbuja14" HorizontalAlignment="Center" Height="106" Margin="0,-150,0,0" VerticalAlignment="Top" Width="150" Source="/bubble_14.png" Stretch="Fill"/>
        
    </Canvas>
</Window>
