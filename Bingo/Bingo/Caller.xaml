        <Image x:Name="CallerImg" Height="148" Canvas.Left="1939" Canvas.Top="892" Width="424"
               Source="/Caller.png">
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)"
                                             From="1939" To="47"
                                             Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
        <Image x:Name="UsuarioImg" Height="148" Canvas.Left="-462" Canvas.Top="22" Width="424"
               Source="/Usuario.png">
            <Image.Triggers>
