<Window x:Class="Bingo.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Title="Menu" Height="563" Width="1000" WindowStartupLocation="CenterScreen" Background="#c4dafa">
    <Grid>
        <Button x:Name = "BtnCaller"
                BorderBrush="Black" BorderThickness="7,7,7,7"
                Content="Caller" 
                Height="120" 
                Width="300"
                FontSize="60" FontFamily="Franklin Gothic Demi"
                Background="#4d82bc"
                Margin="0,0,575,116"
                Click="BtnCaller_Click" MouseEnter="Encima"/>
        <Button x:Name = "BtnJugador"
                BorderBrush="Black" BorderThickness="7,7,7,7"
                Content="Jugador" 
                Height="120" Width="300"
                FontSize="60" FontFamily="Franklin Gothic Demi"
                Background="#4d82bc"
                Margin="575,0,0,116" Click="BtnJugador_Click" MouseEnter="Encima"/>
    </Grid>
</Window>
