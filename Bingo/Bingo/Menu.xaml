<Window x:Class="Bingo.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Title="Menu" Height="563" Width="1000" 
        WindowStartupLocation="CenterScreen"
        Background="#c4dafa"
        ResizeMode="NoResize">
    <Grid ShowGridLines="True">
        <Button x:Name = "BtnCaller"
                Style="{StaticResource BotonPersonalizado}"
                Content="Caller"
                FontSize="40" FontFamily="Franklin Gothic Demi"
                Margin="40,151,547,151"
                Click="BtnCaller_Click" MouseEnter="Encima"/>
        <Button x:Name = "BtnJugador"
                Style="{StaticResource BotonPersonalizado}"
                Content="Jugador"
                FontSize="40" FontFamily="Franklin Gothic Demi"
                
                Margin="548,151,40,151" Click="BtnJugador_Click" MouseEnter="Encima"/>
    </Grid>
</Window>
