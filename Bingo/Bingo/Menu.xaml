<Window x:Class="Bingo.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bingo"
        mc:Ignorable="d"
        Title="Menu" Height="563" Width="1000" WindowStartupLocation="CenterScreen" Background="#c4dafa">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ThickBorderButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border BorderThickness="5" BorderBrush="Black" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <MediaElement x:Name="BackgroundMusic" Source="Music/Let's be Honest.mp3" Volume="0.1"/>
        <Button x:Name = "BtnCaller" Style="{StaticResource ThickBorderButtonStyle}"
                Content="Caller" 
                Height="120" 
                Width="300"
                FontSize="60" FontFamily="Franklin Gothic Demi"
                Background="#4d82bc"
                Margin="0,100,575,0" Click="BtnCaller_Click" MouseEnter="Encima"/>
        <Button x:Name = "BtnJugador" Style="{StaticResource ThickBorderButtonStyle}"
                Content="Jugador" 
                Height="120" Width="300"
                FontSize="60" FontFamily="Franklin Gothic Demi"
                Background="#4d82bc"
                Margin="575,100,0,0" Click="BtnJugador_Click"/>
    </Grid>
